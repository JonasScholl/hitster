    "expo-camera": "17.0.10",
    "expo-constants": "18.0.13",
    "expo-linear-gradient": "15.0.8",
    "expo-linking": "8.0.11",
    "expo-localization": "17.0.8",
    "expo-router": "6.0.23",
    "expo-status-bar": "3.0.9",
    "i18next": "25.8.4",
    "nativewind": "4.2.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
