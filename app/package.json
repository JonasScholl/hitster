    "@babel/runtime": "7.26.10",
    "@types/react": "19.1.10",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "eslint": "9.0.0",
    "tailwindcss": "3.4.19",
    "typescript": "5.9.3"
  },
  "private": true,
